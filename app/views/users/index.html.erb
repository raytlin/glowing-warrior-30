<h1>Listing users</h1>

<table>
  <tr>
  	<th>Picture</th>
    <th>Email</th>
    <th>Password</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>ID</th>
  </tr>

<% for user in @users %>
  <tr>
  	<td><%= image_tag(user.image_path, :size => '90x100' )%>
    <td><%=h user.email %></td>
    <td><%=h user.password %></td>
    <td><%=h user.first_name %></td>
    <td><%=h user.last_name %></td>
    <td><%=h user.id %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %> | <%= link_to('Back to Menu', :controller => "admin", :action => "menu" ) %>
