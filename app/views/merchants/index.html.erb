<h1>Listing merchants</h1>

<table>
  <tr>
  	<th>Picture</th>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Web address</th>
    <th>Score</th>
    <th>ID</th>
  </tr>

<% for merchant in @merchants %>
  <tr>
  	<td><%= image_tag(merchant.image_path, :size => '200x90' )%>
    <td><%=h merchant.name %></td>
    <td><%=h merchant.address %></td>
    <td><%=h merchant.city %></td>
    <td><%=h merchant.state %></td>
    <td><%=h merchant.zip %></td>
    <td><%=h merchant.web_address %></td>
    <td><%=h render :partial => 'score', :locals => { :merchant => merchant } %>
    </td>
    <td><%=h merchant.id %></td>
    <td><%= link_to 'Show', merchant %></td>
    <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
    <td><%= link_to 'Destroy', merchant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New merchant', new_merchant_path %> | <%= link_to('Back to Menu', :controller => "admin", :action => "menu" )%>
